{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:api-server",
                "onlyDependOnLibsWithTags": [
                  "scope:agx-data",
                  "scope:agx-util",
                  "scope:nsx-data",
                  "scope:nsx-util"
                ]
              },
              {
                "sourceTag": "scope:fullerstack-client",
                "onlyDependOnLibsWithTags": [
                  "scope:agx-data",
                  "scope:agx-util",
                  "scope:ngx-data",
                  "scope:ngx-util",
                  "scope:ngx-ui",
                  "scope:ngx-shared"
                ]
              },
              {
                "sourceTag": "scope:ngx-shared",
                "onlyDependOnLibsWithTags": [
                  "scope:agx-data",
                  "scope:agx-util",
                  "scope:ngx-data",
                  "scope:ngx-util",
                  "scope:ngx-ui"
                ]
              },
              {
                "sourceTag": "scope:agx-data",
                "onlyDependOnLibsWithTags": ["scope:agx-data"]
              },
              {
                "sourceTag": "scope:agx-util",
                "onlyDependOnLibsWithTags": ["scope:agx-data", "scope:agx-util"]
              },
              {
                "sourceTag": "scope:ngx-data",
                "onlyDependOnLibsWithTags": ["scope:agx-data", "scope:agx-util", "scope:ngx-data"]
              },
              {
                "sourceTag": "scope:ngx-util",
                "onlyDependOnLibsWithTags": [
                  "scope:agx-data",
                  "scope:agx-util",
                  "scope:ngx-data",
                  "scope:ngx-util"
                ]
              },
              {
                "sourceTag": "scope:ngx-ui",
                "onlyDependOnLibsWithTags": [
                  "scope:agx-data",
                  "scope:agx-util",
                  "scope:ngx-data",
                  "scope:ngx-util",
                  "scope:ngx-shared",
                  "scope:ngx-ui"
                ]
              },
              {
                "sourceTag": "scope:nsx-data",
                "onlyDependOnLibsWithTags": ["scope:agx-data", "scope:agx-util", "scope:nsx-data"]
              },
              {
                "sourceTag": "scope:nsx-util",
                "onlyDependOnLibsWithTags": [
                  "scope:agx-data",
                  "scope:agx-util",
                  "scope:nsx-data",
                  "scope:nsx-util"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
